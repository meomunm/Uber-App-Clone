<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techkids.vn.uberclone.Welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="10"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.github.glomadrian.materialanimatedswitch.MaterialAnimatedSwitch
                android:id="@+id/sw_location"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                app:ball_release_color="@color/ballReleaseColorSwitch"
                app:base_release_color="@color/baseReleaseColorSwitch"
                app:base_press_color="@color/basePressColorSwitch"
                app:ball_press_color="@android:color/white"
                app:icon_release="@drawable/ic_location_off"
                app:icon_press="@drawable/ic_location_on"/>

        </LinearLayout>
    </RelativeLayout>

</fragment>
